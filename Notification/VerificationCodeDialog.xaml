<Window x:Class="WpfStatus.Notification.VerificationCodeDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Telegram login verification" Height="120" Width="350" FontFamily="Cascadia Code" FontSize="14">
    <StackPanel Margin="10">
        <TextBlock Text="Enter verification code:" Margin="5" />
        <TextBox x:Name="ResponseTextBox" d:Text="Verification code"/>
        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal" Margin="5">
            <Button Content="OK" Width="100" Click="Ok_Button_Click" />
            <Button Content="Cancel" Width="100" Click="Cancel_Button_Click" />
        </StackPanel>
    </StackPanel>
</Window>
